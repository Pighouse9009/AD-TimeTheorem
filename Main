<table align="center">
    <tr>
        <td id="timetext1"></td>
        <td id="timetext2"></td>
    </tr>
    <tr>
        <td id="timer1">0:00:00:00:000</td>
        <td id="timer2">0:00:00:00:000</td>
    </tr>
</table>
<table align="center">
    <tr>
        <td colspan="3" style="font-size:xx-large" height="100">Time Theorems:</td>
    </tr>
    <tr>
        <td>Current Time Theorems:</td>
        <td>Current Time Theorem Generation:</td>
        <td>Time Theorems Wanted:</td>
    </tr>
    <tr>
        <td><input type="text" id="6"></td>
        <td><input type="text" id="7"></td>
        <td><input type="text" id="8"></td>
    </tr>
    <tr height="100">
        <td colspan="3"><button onclick="Generate2()">Generate</button></td>
    </tr>
    <tr>
        <td id="timetext3" colspan="3"></td>
    </tr>
    <tr>
        <td id="timer3" colspan="3">0:00:00:00:000</td>
    </tr>
