<script>
    document.getElementById('timetext1').innerHTML = "Time until 0 power without adding quarks:"
    document.getElementById('timetext2').innerHTML = "Time until 0 power with adding quarks:"
    document.getElementById('timetext3').innerHTML = "Time until 0 time theorems:"
    function Generate() {
        var value = []
        for (i = 1; i <= 5; i++) {
            value[i-1] = +document.getElementById(i).value
        }
        document.getElementById('timetext1').innerHTML = "Time until " + value[4] + " power without adding quarks:"
        document.getElementById('timer1').innerHTML = maketimer((value[4]-value[0])/value[3])
        document.getElementById('timetext2').innerHTML = "Time until " + value[4] + " power with adding quarks:"
        var thingy = value[4]-value[0]-value[3]*value[1]
        var thingtime = value[1]
        while (thingy > 0) {
            thingy -= (value[3]+value[2])*value[1]
            value[3] += value[2]
            thingtime += value[1]
        }
        document.getElementById('timer2').innerHTML = maketimer(thingtime)
    }
    function Generate2(){
        var value = []
        for (i = 6; i <= 8; i++) {
            value[i-6] = +document.getElementById(i).value
        }
        document.getElementById('timetext3').innerHTML = "Time until " + value[2] + " time theorems:"
        document.getElementById('timer3').innerHTML = maketimer((value[2]-value[0])/value[1])
    }
    function maketimer(time) {
        var thetime = "";
        var times = [Math.floor(time / 86400), Math.floor((time / 86400 - Math.floor(time / 86400)) * 24), Math.floor((time / 3600 - Math.floor(time / 3600)) * 60), Math.floor((time / 60 - Math.floor(time / 60)) * 60), Math.floor((time - Math.floor(time)))]
        for (i = 0; i < 5; i++) {
            if (i == 4) { if (times[i] < 100) { thetime += "0" } }
            if (i > 0 && times[i] < 10) { thetime += "0" }
            thetime += times[i];
            if (i < 4) { thetime += ":" }
        }
        return thetime
    }
</script>

